<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFAFA"
    tools:context=".activity.PedidoActivity">

    <TextView
        android:id="@+id/pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:text="MEU PEDIDO"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="QTD1:"
        android:textColor="#FF0000"
        android:textSize="15dp"/>
    <EditText
        android:id="@+id/textQTD1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:inputType="number" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="NOME/PRODUTO 1:"
        android:textSize="10dp"
        android:textColor="#FF0000"/>
    <EditText
        android:id="@+id/txtNomeProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:inputType="text"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="QTD2:"
        android:textColor="#FF0000"
        android:textSize="10dp"/>
    <EditText
        android:id="@+id/textQTD2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:text="NOME/PRODUTO 2:"/>
    <EditText
        android:id="@+id/txtNomeProd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:inputType="text"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="QTD3:"
        android:textColor="#FF0000"
        android:textSize="10dp"/>
    <EditText
        android:id="@+id/textQTD3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:text="NOME/PRODUTO 3:"/>
    <EditText
        android:id="@+id/txtNomeProd3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:inputType="text"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:text="QTD-TOTAL:"
        android:textColor="#FF0000"
        android:textSize="30dp"
        android:id="@+id/textView" />
    <TextView
        android:id="@+id/txtQtdFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:textSize="30dp"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignTop="@+id/txtQtdFinal">
    <Button
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:text="CALCULAR"
        android:background="#FF0000"
        android:textSize="15dp"
        android:id="@+id/btCalcular"
        android:layout_marginTop="40dp" />

        <Button
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:text="SALVAR"
            android:id="@+id/btGerar"
            android:background="#0000FF"
            android:textSize="15dp"
            android:layout_marginTop="0dp" />


    </LinearLayout>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:text="QUANTIDADE:"
        android:textColor="#FF0000"
        android:textSize="10dp"/>

    <EditText
        android:id="@+id/valorUnit"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:inputType="numberDecimal"/>-->


</RelativeLayout>