<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.CadastroActivity">

    <TextView
        android:id="@+id/edTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Cadastre-se Agora"
        android:textColor="#FF0000"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CodigoCliente"
        android:layout_marginTop="35dp"
        android:id="@+id/txCodigoCliente" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edCodigoCliente"
        android:inputType="textCapSentences|number"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:layout_marginTop="50dp"
        android:textSize="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ttextnome"
        android:layout_marginTop="80dp"/>
    <EditText
        android:id="@+id/edNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="textCapSentences|textPersonName"
        android:background="#000000"
        android:textColor="#F8F8FF"
        android:layout_marginTop="100dp"
        android:textSize="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o:"
        android:layout_marginTop="130dp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/edEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="15dp"
        android:background="#000000"
        android:layout_marginTop="150dp"
        android:inputType="textCapSentences|textPostalAddress"
        android:textColor="#F8F8FF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:layout_marginTop="180dp"/>

    <EditText
        android:id="@+id/edTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="15dp"
        android:layout_marginTop="200dp"
        android:inputType="phone"
        android:background="#000000"
        android:textColor="#F8F8FF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginTop="230dp"/>

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="15dp"
        android:layout_marginTop="250dp"
        android:inputType="textWebEmailAddress"
        android:background="#000000"
        android:textColor="#F8F8FF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="APAGAR"
        android:id="@+id/btCancelar"
        android:onClick="voltaMenu"
        android:background="#FF0000"
        android:textSize="25dp"
        android:layout_marginTop="300dp"
         />

    <Button
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:text="CONFIRMAR"
        android:id="@+id/btConfirmar"
        android:background="#0000FF"
        android:textSize="25dp"
        android:layout_marginTop="0dp"
        />

        <Button
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:text="MOSTRAR"
        android:id="@+id/btMostrar"
        android:background="#FFFF00"
        android:textSize="25dp"
        android:layout_marginTop="0dp"
        />

        <Button
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:text="LIMPAR"
            android:id="@+id/btLimpar"
            android:background="#00FF00"
            android:textSize="25dp"
            android:layout_marginTop="0dp"
            />

    </LinearLayout>

</RelativeLayout>
